<!DOCTYPE html>  
<html>
   <head>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <script
         src="https://code.jquery.com/jquery-3.5.1.min.js"
         integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
         crossorigin="anonymous"></script>
      <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
      <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/additional-methods.min.js"></script>
      <script type="text/javascript" src="/public/js/validator/register.js"></script>
      <style>  
         body{  
         font-family: Calibri, Helvetica, sans-serif;  
         background-color: white;  
         margin: 0;
         }  
         .container {  
         /*padding: 50px;  */
         /*background-color: lightblue;  */
         }
         .width-50{
         width:50%;
         }
         .float-left{
         float: left;
         }
         input[type=text], input[type=email], input[type=number],input[type=password],select, textarea {  
         width: calc(100% - 30px)!important;
         padding: 10px;
         margin: 5px 0;
         display: inline-block;
         background: #f1f1f1;
         border: 1px solid #dfdfdf;
         border-radius: 10px;
         }  
         input[type=text]:focus, input[type=password]:focus {  
         background-color: orange;  
         outline: none;  
         }  
         div {  
         padding: 10px 0;  
         }  
         hr {  
         border: 1px solid #f1f1f1;  
         margin-bottom: 25px;  
         }  
         .registerbtn {  
         background-color: midnightblue;
         color: white;
         padding: 10px 20px;
         border: none;
         cursor: pointer;
         width: 100%;
         border-radius: 10px;
         font-size: 18px;
         width: 200px;
         }  
         /*.registerbtn:hover {  
         opacity: 1;  
         }*/
         input[type=submit]:hover {
            padding: 10px 20px!important;
            border-radius: 10px!important;
         }
         .validation-error-label {
         color: red;
         }  
      </style>

 <%- include('./partials/userHeader');%>
   </head>
   <body onload="essentials(),branchDropDown()">
      <header id="header"> </header>
<%- include('./partials/sideNav'); %><br/>
<%- include('./partials/usernav'); %>
 
      <% if(locals.err_msg) { %>
      <script>
         var msg = "<%= err_msg %>";
         alert(msg);
      </script>
      <% } %>
      <form style="display: block;" name="registration_form" id="registration_form" method="post" action="/addUser">
         <div class="container">
         <center>
            <h2>Add User</h2>
         </center>
         <hr>
         <div>
            <div style="width:25%; float:left;">
               <label>Matriculation Number:</label>  
               <input type="number" name="matriculationnumber" placeholder="Add Matriculation number" size="10" required/>   
            </div>
            <div style="width:25%; float:left;">
               <label>Course:</label>   
               <select name="course">
                  <option value="HIS">HIS</option>
                  <option value="IT">IT</option>
                  <option value="IBIS">EBIS</option>
                  <option value="EBIS">IBIS</option>
               </select>
            </div>
            <div style="width:25%; float:left;">
               <label>Branch:</label>  
               <input type="text" name="branch" placeholder="Add Branch name" required/>   
            </div>
            <div style="width:25%;display: inline-block;">
               <label>Semester:</label>
               <input type="number" name="semester" placeholder="semester number" size="2" /> 
            </div>
         </div>
         <!-- <fieldset>Personal Detail</fieldset> -->
         <div>
            <div class="width-50 float-left">
               <label> First Name: </label>   
               <input type="text" name="firstname" placeholder= "Add Firstname" size="15" required/>   
            </div>
            <div class="float-left" style="width:calc(50% - 10px); margin-left: 10px">
               <label> Last Name: </label>   
               <input type="text" name="lastname" placeholder="Add Lastname" size="15"  required/>        
            </div>
         </div>
         <div class="width-50">
            <label for="email">Email:</label>  
            <input type="email" placeholder="Enter Email" name="email" required>  
         </div>
         <!-- <div>
            <div class="width-50 float-left">
               <label for="password">Password:</label>  
               <input type="password" id="password" name="password" placeholder="Enter Password" required>  
            </div>
            <div class="float-left" style="width:calc(50% - 10px); margin-left: 10px">
               <label for="password_repeat">Re-type Password:</label>  
               <input type="password" placeholder="Retype Password" name="password_repeat" required>
            </div>
         </div> -->
         <div style="text-align: center;">
            <input type="submit" name="submit" class="registerbtn" value="Register" />    
         </div>
      </form>
      </div>
    <footer id="footer"></footer>
    <br>
    <script> 
       var i= document.getElementById("adduser");
      
       i.className +=" active";
       var j=document.getElementById("user_tab");
      
      j.className +=" active";
        </script>
   </body>
</html>